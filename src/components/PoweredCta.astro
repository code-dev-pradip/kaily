---
/**
 * PoweredCta.astro
 * - Desktop (lg+): image left, content right
 * - Tablet & Mobile: content first, image below
 */

const {
  title = "Plug Kaily with the world’s top AI providers",
  description =
    "Choose from the world’s leading LLMs like ChatGPT, Grok, DeepSeek, ElevenLabs, Retell, and more to power your AI agents",
  imageSrc = "/images/ai-providers.avif",
} = Astro.props;
---

<section class="w-full py-14 md:py-20">
  <div class="mx-auto max-w-[1200px] px-4">
    <div class="flex flex-col gap-12 lg:grid lg:grid-cols-2 lg:items-center">

      <!-- Image -->
      <div class="order-2 lg:order-1">
        <div class="mx-auto max-w-[520px]">
          <img
            src={imageSrc}
            alt="Top AI providers"
            loading="lazy"
            class="w-full h-auto object-contain"
          />
        </div>
      </div>

      <!-- Content -->
      <div class="order-1 text-center lg:order-2 lg:text-left">

        <!-- Pill -->
        <div class="mb-2 inline-flex items-center gap-2 lg:mb-2.5">
          <span
            class="
              font-medium
              text-[18px] leading-[1.33]
              lg:text-[20px] lg:leading-[1.4]
              bg-[linear-gradient(90deg,#9276FF_0.02%,#652FFF_99.98%)]
              bg-clip-text text-transparent
            "
          >
            Powered by the best
          </span>

          <img
            src="/images/sparkle.svg"
            alt="sparkle"
            loading="lazy"
            class="h-5 w-5 shrink-0"
          />
        </div>

        <!-- Heading -->
        <h2
          class="mt-4 text-[28px] font-semibold leading-[1.2] tracking-[-0.02em] text-[#0c0c0c]
                 md:text-[36px] lg:text-[48px]"
        >
          {title}
        </h2>

        <!-- Description -->
        <p class="mt-2 text-base font-medium leading-[1.4] text-[#4c4c4c] lg:mt-3 lg:text-lg">
          {description}
        </p>

      </div>

    </div>
  </div>
</section>
