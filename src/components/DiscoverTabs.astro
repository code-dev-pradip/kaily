<script is:inline>
  const root = document.currentScript?.previousElementSibling;
  if (!root) throw new Error("DiscoverTabs: root not found");

  const buttons = [...root.querySelectorAll("[data-tab-btn]")];
  const panels = [...root.querySelectorAll("[data-tab-panel]")];
  const DURATION_MS = 4800;

  function setActive(index) {
    buttons.forEach((btn, i) => {
      const isActive = i === index;
      btn.setAttribute("aria-selected", isActive ? "true" : "false");
      const color = btn.getAttribute("data-color") || "#111827";
      btn.style.color = isActive ? color : "#525252";

      const bar = btn.querySelector("[data-progress]");
      if (bar) {
        bar.style.backgroundColor = isActive ? color : "transparent";
        bar.style.width = "0%";
        bar.style.transition = "none";
        void bar.offsetWidth;
        if (isActive) {
          bar.style.transition = `width ${DURATION_MS}ms linear`;
          bar.style.width = "100%";
        }
      }
    });

    panels.forEach((p, i) => {
      p.classList.toggle("hidden", i !== index);
      p.classList.toggle("block", i === index);
    });
  }

  const initialAttr = Number(root.getAttribute("data-initial-active"));
  setActive(!Number.isNaN(initialAttr) && initialAttr >= 0 ? initialAttr : 3);

  buttons.forEach((btn) => {
    btn.addEventListener("click", () => {
      setActive(Number(btn.getAttribute("data-index") || 0));
    });

    btn.addEventListener("keydown", (e) => {
      if (e.key !== "ArrowLeft" && e.key !== "ArrowRight") return;
      e.preventDefault();
      const current = Number(btn.getAttribute("data-index") || 0);
      const next =
        e.key === "ArrowRight"
          ? (current + 1) % buttons.length
          : (current - 1 + buttons.length) % buttons.length;
      buttons[next].focus();
      setActive(next);
    });
  });
</script>
