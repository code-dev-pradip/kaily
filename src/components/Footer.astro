---
/**
 * Footer.astro
 *
 * Put these images in /public/images/ (or update paths):
 *  - /images/kaily-logo.svg
 *  - /images/badge-soc2.svg
 *  - /images/badge-gdpr.svg
 *  - /images/badge-iso27001.svg
 *  - /images/us-flag.svg   (optional, or replace with your own)
 */

const {
  kailyLogo = "/images/kailylogo.avif",
  socBadge = "/images/soc.webp",
  gdprBadge = "/images/gdpr.webp",
  isoBadge = "/images/iso.webp",
  flagImg = "/images/usa.webp",
} = Astro.props;

const columns = [
  { title: "Products", links: ["Helpdesk", "MCP", "AR Try-on", "AI Facial Skin Analysis"] },
  { title: "Channels", links: ["Website", "AI Voice Call", "WhatsApp", "iOS", "Android", "Email", "Slack"] },
  { title: "Industries", links: ["E-commerce & Retail", "Education", "Travel & Hospitality", "BFSI", "Real Estate"] },
  { title: "Free Tools", links: ["Chat with PDF", "Chat with Website", "Pixxy"] },
  { title: "Resources", links: ["Blogs", "Insights", "Release Notes", "Documentation", "All Usecases", "Glossary"] },
  { title: "Other Links", links: ["Company", "Pricing", "Partner Program", "Contact"] },
];

const socials = [
  { label: "LinkedIn", href: "#", icon: "in" },
  { label: "X", href: "#", icon: "x" },
  { label: "YouTube", href: "#", icon: "yt" },
];

const legalLinks = [
  { label: "Privacy Policy", href: "#" },
  { label: "Terms & Conditions", href: "#" },
  { label: "Caution Notice", href: "#" },
  { label: "Manage Cookies", href: "#" },
];
---

<footer class="w-full bg-white">
  <!-- Top -->
  <div class="mx-auto max-w-[1200px] px-4 pt-10 pb-12 lg:pt-14">
    <div class="flex flex-col items-start justify-between gap-10 lg:flex-row lg:items-start">
      <!-- Left -->
      <div class="max-w-[560px]">
        <div class="flex items-center gap-3">
          <img src={kailyLogo} alt="Kaily" class="h-10 w-auto" loading="lazy" />
        </div>

        <p class="mt-4 text-[16px] leading-[1.6] text-[#6b6b6b] lg:text-[18px]">
          Create conversational AI agents that your customers love. Integrate across your website,
          app, WhatsApp, email, voice, and more.
        </p>

        <div class="mt-6 flex items-center gap-3">
          {socials.map((s) => (
            <a
              href={s.href}
              aria-label={s.label}
              class="inline-flex h-9 w-9 items-center justify-center rounded-lg bg-[#4b4b4b]/10 text-[#4b4b4b] hover:bg-[#4b4b4b]/15"
            >
              {s.icon === "in" && (
                <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true">
                  <path d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5ZM.5 23.5h4V7.98h-4V23.5ZM8.5 7.98h3.83v2.12h.06c.53-1 1.82-2.06 3.75-2.06 4.01 0 4.75 2.64 4.75 6.08v9.38h-4v-8.31c0-1.98-.04-4.52-2.75-4.52-2.76 0-3.18 2.15-3.18 4.38v8.45h-4V7.98Z"/>
                </svg>
              )}
              {s.icon === "x" && (
                <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true">
                  <path d="M18.9 2H22l-6.8 7.8L23.2 22h-6.9l-5.4-7-6.1 7H1.7l7.3-8.4L1 2h7.1l4.9 6.3L18.9 2Zm-1.2 18h1.7L7.2 3.9H5.4L17.7 20Z"/>
                </svg>
              )}
              {s.icon === "yt" && (
                <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true">
                  <path d="M23.5 6.2a3.1 3.1 0 0 0-2.2-2.2C19.4 3.5 12 3.5 12 3.5s-7.4 0-9.3.5A3.1 3.1 0 0 0 .5 6.2 32.8 32.8 0 0 0 0 12s0 3.8.5 5.8a3.1 3.1 0 0 0 2.2 2.2c1.9.5 9.3.5 9.3.5s7.4 0 9.3-.5a3.1 3.1 0 0 0 2.2-2.2c.5-2 .5-5.8.5-5.8s0-3.8-.5-5.8ZM9.6 15.5V8.5L15.8 12l-6.2 3.5Z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Right badges -->
      <div class="flex w-full items-center justify-start gap-8 lg:w-auto lg:justify-end">
        <img src={socBadge} alt="AICPA SOC" class="h-[88px] w-[88px] object-contain lg:h-[96px] lg:w-[96px]" loading="lazy" />
        <img src={gdprBadge} alt="GDPR" class="h-[88px] w-[88px] object-contain lg:h-[96px] lg:w-[96px]" loading="lazy" />
        <img src={isoBadge} alt="ISO 27001" class="h-[88px] w-[88px] object-contain lg:h-[96px] lg:w-[96px]" loading="lazy" />
      </div>
    </div>
  </div>

  <!-- Divider -->
  <div class="border-t border-[#EBEBEB]"></div>

  <!-- Columns -->
  <div class="mx-auto max-w-[1200px] px-4 py-10 lg:py-12">
    <div class="grid grid-cols-2 gap-10 sm:grid-cols-3 lg:grid-cols-6">
      {columns.map((col) => (
        <div>
          <h3 class="text-[16px] font-semibold text-[#0c0c0c]">{col.title}</h3>
          <ul class="mt-4 space-y-3">
            {col.links.map((label) => (
              <li>
                <a href="#" class="text-[15px] leading-[1.6] text-[#6b6b6b] hover:text-[#0c0c0c]">
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>

  <!-- Divider -->
  <div class="border-t border-[#EBEBEB]"></div>

  <!-- Bottom bar (like screenshot) -->
  <div class="mx-auto max-w-[1200px] px-4 py-6">
    <!-- Legal links row -->
    <div class="flex flex-wrap items-center justify-center gap-x-8 gap-y-3 text-[15px] text-[#6b6b6b]">
      {legalLinks.map((l) => (
        <a href={l.href} class="hover:text-[#0c0c0c]">{l.label}</a>
      ))}
    </div>

    <!-- Last row -->
    <div class="mt-6 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
      <!-- Left -->
      <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-[15px] text-[#6b6b6b]">
        <span>Â© 2026 Shopsense Retail Technologies Limited</span>

        <span class="inline-flex items-center gap-2">
          <img src={flagImg} alt="US" class="h-4 w-4 rounded-sm object-cover" loading="lazy" />
          <span>99 S Almaden Blvd, Suite 600, San Jose, CA 95113</span>
        </span>
      </div>

      <!-- Right pill -->
      <div class="flex items-center justify-start lg:justify-end">
        <div
          class="inline-flex items-center gap-2 rounded-full border border-[#EBEBEB] bg-white px-4 py-2 text-[15px] font-medium text-[#4b4b4b]
                 shadow-[0_1px_2px_0_rgba(0,0,0,0.05)]"
        >
          <span class="inline-flex h-5 w-5 items-center justify-center rounded-full bg-[#EAF7EF]">
            <svg viewBox="0 0 24 24" class="h-4 w-4 text-[#16A34A]" fill="currentColor" aria-hidden="true">
              <path d="M12 2a10 10 0 1 0 10 10A10.01 10.01 0 0 0 12 2Zm-1.2 14.2-3.6-3.6 1.4-1.4 2.2 2.2 5-5 1.4 1.4Z"/>
            </svg>
          </span>
          <span>All services are online</span>
        </div>
      </div>
    </div>
  </div>
</footer>
